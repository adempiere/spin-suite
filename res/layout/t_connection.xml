 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
    	<TextView
        	android:id="@+id/tv_UrlSoap"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/Url_Soap" />	

    	<EditText
    	    android:id="@+id/et_UrlSoap"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:inputType="textUri"
    	    android:maxLength="600" >
        </EditText>
        <!-- Carlos Parada 11/05/2012 Nombre del Espacio de Metodo Soap -->
        <TextView
        	android:id="@+id/tv_NameSpace"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/NameSpace" />	

    	<EditText
    	    android:id="@+id/et_NameSpace"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:inputType="textUri"
    	    android:maxLength="600" >
        </EditText>
        <!-- Fin Carlos Parada -->
    	<TextView
        	android:id="@+id/tv_Method"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/MethodSync" />

    	<EditText
        	android:id="@+id/et_Method"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:inputType="text" />

    	<TextView
        	android:id="@+id/tv_Timeout"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/Timeout" />

    	<EditText
        	android:id="@+id/et_Timeout"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:maxLength="10"
        	android:inputType="numberDecimal" />
    	
    		
    	<CheckBox
    	    android:id="@+id/ch_SaveSD"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:checked="false"
    	    android:text="@string/SaveSD" />
    	
    	<Button
    	    android:id="@+id/butt_InitSync"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="@string/InitSync" />
    	
    </TableLayout>
</ScrollView>